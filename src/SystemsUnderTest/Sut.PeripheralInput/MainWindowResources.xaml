<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="BaseStyle" TargetType="{x:Type FrameworkElement}">
        <Setter Property="Margin" Value="3" />
    </Style>

    <!-- GroupBox default style -->
    <Style TargetType="{x:Type GroupBox}" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="Padding" Value="3" />
    </Style>

    <!-- TextBlock default style -->
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseStyle}" />
    
    <!-- TextBox default style -->
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}" />

</ResourceDictionary>