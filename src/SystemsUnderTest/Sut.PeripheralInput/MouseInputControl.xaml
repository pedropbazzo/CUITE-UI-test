<UserControl
    x:Class="Sut.PeripheralInput.MouseInputControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <GroupBox Header="Mouse Input">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                AutomationProperties.AutomationId="i5BpTf7kjkyn51Hp-91V1Q"
                Background="LightGreen"
                TextAlignment="Center"
                Text="Do it, click me!"
                MouseDown="OnMouseDown" />
            
            <TextBox
                x:Name="resultTextBox"
                AutomationProperties.AutomationId="PpktgwLnNkqUl51Gfnc0jQ"
                Grid.Row="1"
                IsReadOnly="True" />
        </Grid>
        
    </GroupBox>
</UserControl>